# ============================================================
# PULZIFI — copy this to .env and fill in your values
# ============================================================

# ============================================================
# ENVIRONMENT
# ============================================================
ENVIRONMENT=development
LOG_LEVEL=info

# ============================================================
# DATABASE
# ============================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=pulzifi
DB_USER=pulzifi_user
DB_PASSWORD=pulzifi_password

# ============================================================
# SERVER
# ============================================================
HTTP_PORT=9090
ENABLE_WORKERS=true
# Dev: http://localhost:3000 | Production: https://yourdomain.com
FRONTEND_URL=http://localhost:3000
# Dev: localhost | Production: .yourdomain.com
COOKIE_DOMAIN=localhost

# ============================================================
# CORS
# Dev: localhost | Production: https://app.yourdomain.com
# ============================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://*.localhost:3000,http://localhost:3001

# ============================================================
# AUTH
# ============================================================
JWT_SECRET=change-me-in-production
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# ============================================================
# OBJECT STORAGE (Cloudinary)
# ============================================================
OBJECT_STORAGE_PROVIDER=cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=pulzifi

# ============================================================
# EXTRACTOR (Playwright screenshot service)
# ============================================================
EXTRACTOR_URL=http://extractor:3000

# ============================================================
# AI INSIGHTS (OpenRouter)
# ============================================================
OPENROUTER_API_KEY=
OPENROUTER_MODEL=stepfun/step-3.5-flash:free

# ============================================================
# EMAIL (Resend) — falls back to noop if not set
# ============================================================
# RESEND_API_KEY=
# EMAIL_FROM_ADDRESS=noreply@yourdomain.com
# EMAIL_FROM_NAME=Pulzifi

# ============================================================
# OAUTH — optional, provider only enabled when keys are set
# ============================================================
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# OAUTH_REDIRECT_BASE_URL=http://localhost:9090
