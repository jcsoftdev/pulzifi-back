# ============================================================
# PULZIFI — copy this to .env and fill in your values
# Required vars (marked with [REQUIRED]) will crash the server on startup if missing.
# ============================================================

# ============================================================
# ENVIRONMENT
# ============================================================
ENVIRONMENT=development
LOG_LEVEL=info

# ============================================================
# DATABASE [REQUIRED]
# ============================================================
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=
DB_PASSWORD=

# ============================================================
# SERVER
# ============================================================
HTTP_PORT=9090
ENABLE_WORKERS=true
FRONTEND_URL=
# Dev: localhost | Production: .yourdomain.com
COOKIE_DOMAIN=

# ============================================================
# CORS [REQUIRED]
# Dev: http://localhost:3000,http://*.localhost:3000
# Production: https://app.yourdomain.com
# ============================================================
CORS_ALLOWED_ORIGINS=

# ============================================================
# AUTH [REQUIRED]
# ============================================================
JWT_SECRET=
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# ============================================================
# EXTRACTOR — Playwright screenshot service [REQUIRED]
# Docker: http://extractor:3000
# ============================================================
EXTRACTOR_URL=

# ============================================================
# OBJECT STORAGE
# ============================================================
OBJECT_STORAGE_PROVIDER=minio

# MinIO / LocalStack
MINIO_ENDPOINT=
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=
MINIO_USE_SSL=false
MINIO_PUBLIC_URL=

# Cloudinary (alternative)
# OBJECT_STORAGE_PROVIDER=cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=

# ============================================================
# AI INSIGHTS (OpenRouter) — optional
# ============================================================
OPENROUTER_API_KEY=
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free

# ============================================================
# EMAIL (Resend) — optional, email disabled if not set
# ============================================================
RESEND_API_KEY=
EMAIL_FROM_ADDRESS=
EMAIL_FROM_NAME=

# ============================================================
# OAUTH — optional, provider only enabled when keys are set
# ============================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
OAUTH_REDIRECT_BASE_URL=
