# ============================================================
# PULZIFI ENVIRONMENT VARIABLES
# Copy this file to .env and update values for your environment
# ============================================================

# ============================================================
# ENVIRONMENT
# ============================================================
ENVIRONMENT=development
LOG_LEVEL=info

# ============================================================
# DATABASE (PostgreSQL)
# ============================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=pulzifi
DB_USER=pulzifi_user
DB_PASSWORD=pulzifi_password
DB_MAX_CONNECTIONS=25
DB_SSL_MODE=disable

# ============================================================
# REDIS
# ============================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# ============================================================
# KAFKA
# ============================================================
KAFKA_BROKERS=kafka:29092
KAFKA_CONSUMER_GROUP=pulzifi-consumer-group
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# ============================================================
# JWT & AUTH
# ============================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
# Token expiration in seconds
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800
COOKIE_DOMAIN=.pulzifi.local

# ============================================================
# SERVER CONFIGURATION
# ============================================================
HTTP_PORT=9090
GRPC_PORT=9000

# ============================================================
# EXTERNAL SERVICES
# ============================================================

# SendGrid Email Service
SENDGRID_API_KEY=

# AWS SES Email Service
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# OpenAI / Claude API (for AI insights)
AI_API_KEY=
AI_MODEL=gpt-4

# Slack Integration
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# ============================================================
# MONITORING & OBSERVABILITY
# ============================================================
SENTRY_DSN=
DATADOG_API_KEY=

# ============================================================
# FEATURE FLAGS
# ============================================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_INTEGRATION=true
ENABLE_AI_INSIGHTS=true

# ============================================================
# CORS CONFIGURATION
# ============================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Tenant

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s
