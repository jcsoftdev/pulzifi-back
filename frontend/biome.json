{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noImplicitAnyLet": "warn"
      },
      "style": {
        "useConst": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "trailingCommas": "es5",
      "quoteStyle": "single",
      "expand": "always"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "overrides": [
    {
      "includes": ["**/features/changes-view/ui/text-changes.tsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "noArrayIndexKey": "off"
          }
        }
      }
    },
    {
      "includes": ["**/app/(demo)/**"],
      "linter": {
        "rules": {
          "a11y": {
            "useValidAnchor": "off"
          },
          "suspicious": {
            "noArrayIndexKey": "off"
          },
          "correctness": {
            "useExhaustiveDependencies": "off",
            "useUniqueElementIds": "off"
          }
        }
      }
    }
  ],
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.js",
      "**/*.jsx",
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      "!**/.next",
      "!**/dist",
      "!**/build",
      "!**/.turbo",
      "!**/node_modules"
    ]
  }
}
